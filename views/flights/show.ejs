<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/show.css" />
<%- include('../partials/nav') %>

<main>
    <h1><%= title %></h1>

    <section>
        <div>Airline: </div>
        <div><%= flight.airline %></div>
        <div>Airport: </div>
        <div><%= flight.airport %></div>
        <div>Flight #: </div>
        <div><%= flight.flightNo %></div>
        <div>Departure Date: </div>
        <div><%= flight.departs %></div>
    </section>

    <h2>Tickets</h2>

    <% // Form for creating new tickets %>
    <form 
        id="add-ticket-form"
        action="/flights/<%= flight._id %>/tickets"
        method="POST"
        >
        <label for="seat-input">Seat (ex. A1, F99):</label>
        <input type= "text" name="seat" id="seat-input" required pattern="[A-F][1-9]\d?">

        <label for="price-input">Flight #</label>
        <input type="number" name="price" id="price-input">

        <button type="submit">Add Ticket</button>
    </form>

    <% // If there are tickets, display them %>
    <% if (flight.tickets.length) { %>
        <table>
            <thead>
                <tr>
                    <th>Seat</th>
                    <th>Price</th>
                    <th>Created</th>
                </tr>
            </thead>
            <tbody>
                <% flight.tickets.forEach(function(ticket) { %>
                <tr>
                    <td><%= ticket.seat %></td>
                    <td><%= ticket.price %></td>
                    <td><%= ticket.createdAt.toLocaleDateString() %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>

    <% // If there are no tickets, display a message %>
    <% } else { %>
        <h3>No Tickets Yet</h3>
    <% } %>

    <form
    id="add-perf-to-cast"
    action="/movies/<%= movie._id %>/destinations"
    method="POST"
    >
    <select name="performerId">
        <% perfsNotInCast.forEach(performer => { %>
        <option value="<%= performer._id %>"><%= performer.name %></option>
        <% }) %>
    </select>
    <button type="submit">Add to Cast</button>
    </form>




</main>

<%- include('../partials/footer') %>